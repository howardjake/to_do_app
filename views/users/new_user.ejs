<!DOCTYPE html>
<%- include('../partials/header') %>
<body>
    <header>
        <h1 id="logo"><a href="/home">to_do</a></h1>
    </header>
    <main>
        <form id="sign-up" action="/users/signup" method="POST">
            <h3 class="center">Hello!</h3>
            <p class="center">Sign up to start making your personal to-do list</p>
            <label>
                First Name:
                <input type="text" name="firstName">
            </label>
            <label>
                Last Name:
                <input type="text" name="lastName">
            </label>
            <label>
                Username:
                <input type="text" name="username">
            </label>
            <label>
                Password:
                <input type="text" name="password">
            </label>
            <button class="btn btn-light" type="submit">Sign Up!</button>
        </form>
        <a class="center" href="/home">back to login</a>
    </main>
</body>
<%- include('../partials/footer') %>